{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "strictNullChecks": false
    },
    "include": [
        "./public/**/*"
    ],
    "exclude": [
        "./public/static/**/*"
    ]
}
